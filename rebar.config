%% Rebar3 configuration for ERHTMX Adventure

{erl_opts, [
    debug_info,
    {parse_transform, lager_transform}
]}.

{deps, [
    %% Cowboy - HTTP server
    {cowboy, "2.12.0"},
    %% JSX - JSON encoding/decoding
    {jsx, "3.1.0"}
]}.

{relx, [
    {release, {erhtmx_adventure, "0.1.0"}, [
        erhtmx_adventure,
        cowboy,
        jsx,
        sasl
    ]},
    {dev_mode, true},
    {include_erts, false},
    {extended_start_script, true}
]}.

{profiles, [
    {prod, [
        {relx, [
            {dev_mode, false},
            {include_erts, true}
        ]}
    ]}
]}.

{shell, [
    {apps, [erhtmx_adventure]}
]}.
